---
import FoundationLogo from "../FoundationLogo.astro";
---
<header>
  <div class="header">
    <a href="/" class="site-title">
      <FoundationLogo />
    </a>
    <a href="https://github.com/interledger" class="icon--github">
      <img src="/img/lander/icon-github.svg" alt="Interledger Github" />
    </a>
  </div>
</header>

<style>
  header { 
    background-color: var(--color-bg);
    padding: var(--space-s);
    
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 95rem;
    margin-left: auto;
    margin-right: auto;
  }

  :global(.logo-text) {
    fill: var(--color-text);
  }

  .site-title {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .site-title svg {
    width: 8em;
    flex: none;
  }

  .icon--github img {
    height: 1.25em;
    width: 1.25em;
  }
</style>
